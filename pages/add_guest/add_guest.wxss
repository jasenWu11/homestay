/* pages/add_guest/add_guest.wxss */
@import '/style/weui.wxss';
page{
  width: 100%;
  height: 100%;
  background-color: #eeeeee;
  display: flex;
  flex-direction: column;
}
.content_panel{
  flex: 1;
}
.tip_text{
  margin: 30rpx;
  display: flex;
  color: #000000;
  font-size: 28rpx;
}

.button_panel{
  background-color: #ffffff;
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

.button_view{
  width: 100%;
  background-color: #fc3;
  color: #000000;
  font-size: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 15rpx;
  font-weight: 500;
  border-radius: 8rpx;
}