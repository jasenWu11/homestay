/* pages/room/room.wxss */

page {
  width: 100%;
  height: 100%;
  background-color: #eee;
}

.main_panel {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.content_panel {
  width: 100%;
  flex: 1;
  background-color: #fff;
  margin-bottom: 1rpx;
}

.carousel {
  width: 100%;
  background-color: rebeccapurple;
}

.carousel_swiper {
  width: 100%;
  height: 400rpx;
  display: block;
  position: relative;
  background: #f4f4f4;
}

.carouselImg {
  width: 100%;
  height: inherit;
}

.bottom_panel {
  width: 100%;
  background-color: #fff;
  margin-bottom: 0.5rpx;
  display: flex;
  padding: 20rpx 50rpx;
  box-sizing: border-box;
  justify-content: space-between;
  align-items: center;
}

.click_button_panel {
  height: 70rpx;
  display: flex;
  flex-direction: row-reverse;
  margin-top: -35rpx;
  z-index: 999;
}

.click_button_panel .circle_view {
  height: 70rpx;
  width: 70rpx;
  border-radius: 35rpx;
  z-index: 999;
  margin-right: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  box-shadow: 0px 5rpx 5rpx #aaa;
}

.circle_view .image_view {
  width: 45rpx;
  height: 45rpx;
}

.bottom_panel .icon_view {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.icon_view .icon_image {
  width: 50rpx;
  height: 50rpx;
}

.icon_view .icon_text {
  color: #000;
  font-size: 26rpx;
}

.vertical_line {
  width: 1rpx;
  height: 60rpx;
  background-color: #666;
}

.line {
  width: 100%;
  height: 0.3rpx;
  background-color: #888;
  margin: 10rpx 0rpx;
}

.price_text {
  color: #099;
  font-size: 32rpx;
}

.affirm_button {
  height: 90rpx;
  width: 170rpx;
  background-color: #096;
  color: #fff;
  font-size: 34rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
}

.room_info_panel {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 0rpx 30rpx;
}

.time_panel {
  color: #000;
  font-size: 28rpx;
  width: 100%;
  display: flex;
  align-items: center;
}

.base_info_panel {
  width: 100%;
  display: flex;
}

.base_info_panel .text_view {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.text_view .title_text {
  font-size: 28rpx;
  font-family: SimSun;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  overflow: hidden;
  flex: 1;
}

.text_view .people_text {
  color: #444;
  font-size: 24rpx;
}

.base_info_panel .evaluation_panel{
  height: 100%;
  width: 130rpx;
  margin-left: 30rpx;
  background-color: #000000;
  display: flex;
  flex-direction: column;
  color: #ffffff;
  padding: 10rpx;
  box-sizing: border-box;
  justify-content: space-between;
  align-items: center;
  font-size: 20rpx;
}
