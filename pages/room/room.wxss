/* pages/room/room.wxss */
@import '/style/weui.wxss';
page {
  width: 100%;
  height: 100%;
  background-color: #eee;
}

.main_panel {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.content_panel {
  width: 100%;
  flex: 1;
  background-color: #fff;
  margin-bottom: 1rpx;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
}

.carousel {
  width: 100%;
  background-color: rebeccapurple;
}

.carousel_swiper {
  width: 100%;
  height: 400rpx;
  display: block;
  position: relative;
  background: #f4f4f4;
}

.carouselImg {
  width: 100%;
  height: inherit;
}

.bottom_panel {
  width: 100%;
  background-color: #fff;
  margin-bottom: 0.5rpx;
  display: flex;
  padding: 20rpx 50rpx;
  box-sizing: border-box;
  justify-content: space-between;
  align-items: center;
}

.click_button_panel {
  height: 70rpx;
  display: flex;
  flex-direction: row-reverse;
  margin-top: -35rpx;
  z-index: 999;
}

.click_button_panel .circle_view {
  height: 70rpx;
  width: 70rpx;
  border-radius: 35rpx;
  z-index: 999;
  margin-right: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  box-shadow: 0rpx 5rpx 5rpx #aaa;
}

.circle_view .image_view {
  width: 45rpx;
  height: 45rpx;
}

.bottom_panel .icon_view {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.icon_view .icon_image {
  width: 50rpx;
  height: 50rpx;
}

.icon_view .icon_text {
  color: #000;
  font-size: 26rpx;
}

.vertical_line {
  width: 1rpx;
  height: 60rpx;
  background-color: #666;
}

.line {
  width: 100%;
  height: 0.3rpx;
  background-color: #888;
  margin: 10rpx 0rpx;
}

.price_text {
  color: #099;
  font-size: 32rpx;
}

.affirm_button {
  height: 90rpx;
  width: 170rpx;
  background-color: #096;
  color: #fff;
  font-size: 34rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
}

.room_info_panel {
  width: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 0rpx 30rpx 20rpx 30rpx;
}

.time_panel {
  color: #000;
  font-size: 28rpx;
  width: 100%;
  display: flex;
  align-items: center;
}

.base_info_panel {
  width: 100%;
  display: flex;
}

.base_info_panel .text_view {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.text_view .title_text {
  font-size: 28rpx;
  font-family: SimSun;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  overflow: hidden;
  flex: 1;
}

.text_view .people_text {
  color: #444;
  font-size: 24rpx;
}

.base_info_panel .evaluation_panel {
  height: 100%;
  width: 120rpx;
  margin-left: 30rpx;
  background-color: #000;
  display: flex;
  flex-direction: column;
  color: #fff;
  padding: 10rpx;
  box-sizing: border-box;
  justify-content: space-between;
  align-items: center;
  font-size: 20rpx;
  border-radius: 8rpx;
}

.instructions_panel {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 10rpx 0rpx;
}

.instructions_panel .icon_view {
  width: 60rpx;
  height: 60rpx;
}

.instructions_panel .instructions_text {
  margin-left: 10rpx;
  flex: 1;
  font-size: 26rpx;
}

.device_panel {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  overflow-x: auto;
}

.device_panel .device_item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.device_item .icon_view {
  width: 60rpx;
  height: 60rpx;
}

.device_item .device_text {
  margin-top: 5rpx;
  font-size: 26rpx;
  color: #2c2c2c;
}

.tip_panel {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 25rpx 0rpx;
}

.tip_panel .title_text {
  color: #000;
  font-size: 34rpx;
}

.tip_panel .to_text {
  color: #888;
  font-size: 26rpx;
}

.landlord_info_panel {
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  box-sizing: border-box;
  box-shadow: 2rpx 2rpx 10rpx 10rpx #eeeeee;
  border-radius: 15rpx;
}

.landlord_info_panel .info_view {
  display: flex;
  flex-direction: row;
}

.info_view .info_image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
}

.info_view .text_view {
  display: flex;
  flex-direction: column;
  margin-left: 15rpx;
  justify-content: center;
}

.text_view .name_text {
  font-size: 32rpx;
  color: #000;
  margin-bottom: 20rpx;
}

.text_view .room_count_text {
  font-size: 26rpx;
  color: #2c2c2c;
}

.landlord_info_panel .room_info_view {
  background-color: #eee;
  padding: 10rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  margin-top: 15rpx;
}

.room_info_view .room_info_text {
  color: #2c2c2c;
  width: 100%;
  font-size: 26rpx;
  font-family: SimSun;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.address_panel {
  width: 100%;
  display: flex;
  flex-direction: column;
  box-shadow: 2rpx 2rpx 10rpx 10rpx #eeeeee;
  border-radius: 15rpx;
  padding-bottom: 20rpx;
  overflow: auto;
}

.address_panel .map_panel {
  width: 100%;
  height: 350rpx;
  margin-bottom: 20rpx;
  border-radius:15rpx 15rpx 0 0;
}

.address_panel .address_view {
  margin: 0rpx 20rpx;
  display: flex;
  align-items: center;
}

.address_view .address_text {
  color: #000;
  font-size: 30rpx;
  flex: 1;
}

.address_view .next_text {
  color: #888;
  font-size: 40rpx;
}

.address_view .distance_text {
  color: #aaa;
  font-size: 28rpx;
}

.address_view .copy_text {
  color: #099;
  font-size: 28rpx;
  margin-left: 15rpx;
}

.evaluation_panel {
  width: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  box-shadow: 2rpx 2rpx 10rpx 10rpx #eeeeee;
  border-radius: 15rpx;
  padding: 30rpx;
}

.evaluation_panel .info_view {
  display: flex;
  flex-direction: row;
}

.info_view .score_text {
  font-size: 38rpx;
  color: #000;
  margin-bottom: 10rpx;
}

.row_view {
  display: flex;
  flex-direction: row-reverse;
  justify-content: flex-end;
}

.row_view .image_star {
  width: 20rpx;
  height: 20rpx;
}

.bubbleTail {
  width: 40px;
  height: 22px;
  border-width: 0;
  border-style: solid;
  border-color: transparent;
  margin-top: 5rpx;
  margin-bottom: -3px;
  border-right-width: 15px;
  border-right-color: currentColor;
  border-radius: 0 62px 0 0;
  color: #eee;
}

.user_info_panel {
  width: 100%;
  border-radius: 10rpx;
  background-color: #eee;
  display: flex;
  flex-direction: column;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

.user_info_panel .base_info{
  display: flex;
  align-items: center;
}

.base_info .user_head{
  width: 50rpx;
  height: 50rpx;
  border-radius: 25rpx;
}

.base_info .username_text{
  font-size: 28rpx;
  color: #000000;
  flex: 1;
  margin-left: 20rpx;
}

.base_info .time_text{
  font-size: 24rpx;
  color: #aaaaaa;
}

.user_info_panel .score_text{
  color: #000000;
  font-size: 36rpx;
  margin: 5rpx 0rpx 5rpx 10rpx;
}

.user_info_panel .evaluation_text{
  font-size: 28rpx;
  color: #000000;
  margin: 5rpx 0rpx 5rpx 10rpx;
}

.security_panel{
  width: 100%;
  display: flex;
  box-sizing: border-box;
  box-shadow: 2rpx 2rpx 10rpx 10rpx #eeeeee;
  border-radius: 15rpx;
  padding: 20rpx;
  align-items: center;
  margin-top: 50rpx;
}

.security_panel .security_icon{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.security_panel .security_text{
  font-size: 26rpx;
  color: #000000;
}

.security_panel .security_tip_text{
  font-size: 24rpx;
  color: #bbbbbb;
  flex: 1;
  display: flex;
  justify-content: flex-end;
}

.slide-box {
  display: -webkit-box;
  overflow-x: scroll;
  -webkit-overflow-scrolling: touch;
  margin-top: 10rpx;
}

/* 隐藏下方的滚动条 */

.slide-box::-webkit-scrollbar {
  background-color: transparent;
}

.slide-box {
  -ms-overflow-style: none;
}

.slide-box {
  overflow: -moz-scrollbars-none;
}

.slide-item {
  width: 170rpx;
}


.weui-demo-dialog{
  visibility:hidden;
  opacity:0;
}

.weui-demo-dialog_show{
  visibility:visible;
  opacity:1;
}
