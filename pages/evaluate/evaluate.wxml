    <view class="base_info">
      <image class="user_head" src="{{item.userImage}}"></image>
      <text class="username_text">{{item.nickname}}</text>
      <text class="time_text">{{item.evaluateTime}}</text>
    </view>
    <text class="score_text">{{item.score}}<text style="font-size:24rpx;">åˆ†</text></text>
    <text class="evaluation_text">{{item.remarks}}</text>
  </view>
</block>